<?xml version="1.0" encoding="UTF-8"?>
<project>
	<extend>../ImagingRoot/project.xml</extend>
    <pomVersion>1</pomVersion>
    <artifactId>IDSWebApp</artifactId>
    <name>IDSWebApp</name>
	<package>gov.va.med.imaging.versions</package>
	<shortDescription>Imaging versions web application. Reads configuration files in installed Tomcat web applications and displays the installed versions of those applications</shortDescription>  
	<build>
		<sourceDirectory>main/src/java</sourceDirectory>
		<unitTestSourceDirectory>main/test/java</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test*.java</include>
			</includes>
			<excludes>
				<exclude>**/ExchangeWebAppTestBase.java</exclude>
			</excludes>
			<resources>
				<resource>
					<directory>main/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>main/src/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>			
	</build>
  <dependencies>
    <dependency>
      <groupId>${pom.groupId}</groupId>
      <artifactId>TomcatAdapter</artifactId>
      <version>${pom.currentVersion}</version>
      <type>jar</type>
    </dependency> 
    
    <!-- Non Imaging dependencies -->
    <dependency>
		<groupId>j2ee</groupId>
		<artifactId>servlet-api</artifactId>
		<version>2.4</version>
		<type>jar</type>
		<properties>
			<war.manifest.classpath>true</war.manifest.classpath>
			<war.bundle>false</war.bundle>
		</properties>
	</dependency>
	<dependency>
		<groupId>j2ee</groupId>
		<artifactId>jsp-api</artifactId>
		<version>2.0</version>
		<type>jar</type>
		<properties>
			<war.manifest.classpath>true</war.manifest.classpath>
			<war.bundle>false</war.bundle>
		</properties>
	</dependency>
  </dependencies>
</project>

