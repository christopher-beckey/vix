<?xml version="1.0" encoding="UTF-8"?>
<project>
	<extend>../ImagingRoot/project.xml</extend>
	<pomVersion>1</pomVersion>
	<artifactId>VixGuiWebApp</artifactId>
	<packaging>war</packaging>
	<name>VixGuiWebApp</name>
	<package>gov.va.med.imaging.exchange</package>
	<shortDescription>The administrative WAR for ViX</shortDescription>
	<build>
		<sourceDirectory>main/src/java</sourceDirectory>
		<unitTestSourceDirectory>
			main/test/java
		</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/Test*.java</include>
			</includes>
			<resources>
				<resource>
					<directory>main/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>main/src/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>CoreRouterSemantics</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		
		<!-- 
			The following dependencies are required to compile this project but they are NOT required to
			run it.  They are annotations that are not retained in class files, 
			annotation processors (and supporting libraries). 
		-->
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>CoreRouterAnnotation</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
    <dependency>
      <groupId>${pom.groupId}</groupId>
      <artifactId>CoreRouter</artifactId>
      <version>${pom.currentVersion}</version>
      <type>jar</type>
    </dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>CoreRouterAnnotationProcessor</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>freemarker</groupId>
			<artifactId>freemarker</artifactId>
			<version>2.3.14</version>
			<type>jar</type>
			<properties>
				<jar.manifest.classpath>true</jar.manifest.classpath>
			</properties>
		</dependency>

		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>BaseWebFacade</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>CoreValueObjects</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingCommon</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>TransactionContext</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingVistaRealmClient</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>DicomCodecImpl</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
			<properties>
				<war.target.path>applets</war.target.path>
				<war.target.filename>
					project.xml.jar
				</war.target.filename>
			</properties>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>VixGuiImageDisplayApplet</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
			<properties>
				<war.target.path>applets</war.target.path>
				<war.target.filename>
					project.xml.jar
				</war.target.filename>
			</properties>
		</dependency>
		<dependency>
			<groupId>jstl</groupId>
			<artifactId>jstl</artifactId>
			<version>1.2</version>
			<type>jar</type>
			<properties>
				<war.target.path>WEB-INF/lib</war.target.path>
				<war.target.filename>
					project.xml.jar
				</war.target.filename>
			</properties>
		</dependency>

		<!-- Non-Imaging dependencies are defined in ImagingRoot -->
	</dependencies>
</project>

